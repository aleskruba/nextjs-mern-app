{
  "compilerOptions": {
    "baseUrl": "./",  // This sets the base directory for resolving absolute paths
    "paths": {
        "@styles/*": ["styles/*"],
        "@/*": ["*"],
        "@models/*": ["models/*"],
        "@utils/*": ["utils/*"],
        "@components/*": ["components/*"],

      },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
